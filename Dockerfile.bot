# Dockerfile for Telegram Bot
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies first (better caching)
COPY package*.json ./
RUN npm ci --only=production

# Copy bot code and .env
COPY src/bot ./src/bot
COPY src/lib ./src/lib
COPY .env .env

# Expose is not needed for bot (no HTTP server)
# But good for documentation
EXPOSE 3000

# Run the bot
CMD ["node", "src/bot/bot.js"]
